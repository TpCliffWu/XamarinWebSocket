<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TestApp.SocketSendPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    Title="Send"
    prism:ViewModelLocator.AutowireViewModel="True">
    <StackLayout Padding="0,50,0,0">
        <!--  發送訊息  -->
        <Label HorizontalOptions="Center" Text="Send Message To IP" />

        <Entry HorizontalOptions="CenterAndExpand" Text="{Binding ConnectIP}" />
        <Entry
            HorizontalOptions="CenterAndExpand"
            Placeholder="SendMessage"
            Text="{Binding SendMessage}" />


        <Button
            Command="{Binding SendCommand}"
            HorizontalOptions="Center"
            Text="Send" />

        <Button
            Command="{Binding CloseCommand}"
            HorizontalOptions="Center"
            Text="Close Connect" />


        <Label HorizontalOptions="Center" Text="{Binding ResponseMessage}" />
    </StackLayout>
</ContentPage>